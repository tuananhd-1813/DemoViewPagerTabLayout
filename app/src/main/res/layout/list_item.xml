<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/full_names"
            android:textSize="36sp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.4"/>
    <TextView
            android:id="@+id/textDateOfBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/cities"
            app:layout_constraintTop_toBottomOf="@id/textViewUserName"
            app:layout_constraintRight_toRightOf="@id/textViewUserName"
            app:layout_constraintLeft_toLeftOf="@id/textViewUserName"
            android:textSize="24dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selected_dot"
            app:layout_constraintTop_toBottomOf="@id/textDateOfBirth"
            app:layout_constraintLeft_toLeftOf="@id/textDateOfBirth"
            app:layout_constraintRight_toRightOf="@id/textDateOfBirth"/>

</androidx.constraintlayout.widget.ConstraintLayout>
